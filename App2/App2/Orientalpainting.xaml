                                       HorizontalOptions="Center"
                                       VerticalOptions="Start"
                                       WidthRequest="220">
                                </Image>
                            </Frame>
                        </Frame>
                    </Frame>

                    <StackLayout Orientation="Horizontal"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Start"
                                 Spacing="25">
                        <StackLayout>
                            <Button Text="중국화"
                                    Clicked="Cprinting"
                                    FontSize="Small"
                                    TextColor="Black"
                                    BorderColor="LightGray"
                                    BackgroundColor="White"/>
                            <Image Source="https://postfiles.pstatic.net/MjAyNDA2MDFfODAg/MDAxNzE3MTg1MDM3NTky.G_oF0-PnXrz3bTYV4B5XWshe14CyD4bKBTlLqz4L4pkg.jPDsmyNcQFvbUQrjKhN1QefF_DnrReejBvu8xevyHJIg.PNG/%EC%8A%A4%ED%81%AC%EB%A6%B0%EC%83%B7_2024-06-01_044756.png?type=w966"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Start"
                                   WidthRequest="100"
                                   HeightRequest="100"
                                   Margin="0,-14,0,0"/>
                        </StackLayout>
                        <StackLayout>
                            <Button Text="일본화"
                                    Clicked="Jprinting"
                                    FontSize="Small"
                                    TextColor="Black"
                                    BorderColor="LightGray"
                                    BackgroundColor="White"/>
                            <Image Source="https://postfiles.pstatic.net/MjAyNDA1MzFfNTUg/MDAxNzE3MTU4NzM5NTE1.LGatdekNew3qJiL8TZKH8qvE-qeHVHFuwcgubm4sUiQg.-ZR4a3dOoCv2JllS264EKCxjAhtj41p60cxdckrmHVAg.PNG/%EC%8A%A4%ED%81%AC%EB%A6%B0%EC%83%B7_2024-05-31_205958.png?type=w966"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Start"
                                   WidthRequest="100"
                                   HeightRequest="100"
                                   Margin="0,-10,0,0"/>
                        </StackLayout>
                        <StackLayout>
                            <Button Text="한국화"
                                    Clicked="Kprinting"
                                    FontSize="Small"
                                    TextColor="Black"
                                    BorderColor="LightGray"
                                    BackgroundColor="White"/>
                            <Image Source="https://postfiles.pstatic.net/MjAyNDA1MzFfMjcx/MDAxNzE3MTYwODA4NjQ2.sxd9NRwRcZ4u51nLT8Fpbv_fvi34zCnMhLdoR390Zz4g.lZvnMbySgXYeU3caoTC_kATJKWeshKISddyMtZ1SSyQg.PNG/%EC%8A%A4%ED%81%AC%EB%A6%B0%EC%83%B7_2024-05-31_220634.png?type=w966"
