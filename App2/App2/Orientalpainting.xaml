             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.Orientalpainting">
    <ContentPage.Content>
        <AbsoluteLayout>
            <BoxView Color="FloralWhite" 
                     AbsoluteLayout.LayoutBounds="0, 0, 1, 0.8"
                     AbsoluteLayout.LayoutFlags="All" />

            <Image Source="https://postfiles.pstatic.net/MjAyNDA1MzFfNjQg/MDAxNzE3MTMyMDkwOTEx.fT__N9o5hAxLEAK8P80osRy4JxShHPujCl_iKlhvW1Ag.7tVgRwNar-RLhi22FECD_55aCNqnBpnQ6PScXzQDkf8g.PNG/%EC%8A%A4%ED%81%AC%EB%A6%B0%EC%83%B7_2024-05-31_140735.png?type=w966"
       Aspect="AspectFill"
                     AbsoluteLayout.LayoutBounds="0, 1, 1, 0.2"
                     AbsoluteLayout.LayoutFlags="All" />

            <ScrollView AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
                        AbsoluteLayout.LayoutFlags="All">

                <StackLayout Padding="60">

                    <Frame BorderColor="Goldenrod"
                           BackgroundColor="Goldenrod"
                           CornerRadius="0"
                           Padding="1"
                           Margin="0,30,0,30"
                           HorizontalOptions="Center"
                           VerticalOptions="Start">
                        <Frame BorderColor="DarkRed"
                               BackgroundColor="DarkRed"
                               CornerRadius="0"
                               Padding="5"
                               HorizontalOptions="Center"
                               VerticalOptions="Start">
                            <Frame BorderColor="White"
                                   BackgroundColor="White"
                                   CornerRadius="0"
                                   Padding="18"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Start">
