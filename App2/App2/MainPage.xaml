<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.MainPage"
             BackgroundColor="WhiteSmoke">
    <AbsoluteLayout>
        <!-- 배경 이미지 -->
        <Image Source="https://postfiles.pstatic.net/MjAyNDA1MzFfMTE4/MDAxNzE3MTMyMDkwNzM1.3-9i97_I9uP7fLVTAU_pijYyC5J9hOKwESBPsVdBHYkg.1046PCw5i8h5DoliJIsGqs5cH3XCmmYysjDbQlW9x9og.JPEG/4dad649cb1af265ead840493ed6be99b.jpg?type=w966"
               Aspect="AspectFill"
               AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
               AbsoluteLayout.LayoutFlags="All" />

        <!-- 콘텐츠 -->
        <ScrollView AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
                    AbsoluteLayout.LayoutFlags="All">
            <StackLayout>
                <AbsoluteLayout>
                    <Button Text="고객센터"
                            FontSize="14"
                            TextColor="Black"
                            BorderColor="LightGray"
                            BackgroundColor="White"
                            WidthRequest="80"
                            HeightRequest="30"
                            Clicked="Button_Clicked5"
                            AbsoluteLayout.LayoutBounds="1, 0, AutoSize, AutoSize"
                            AbsoluteLayout.LayoutFlags="PositionProportional" />

                    <Button Text="감상문"
                            FontSize="14"
                            TextColor="Black"
                            BorderColor="LightGray"
                            BackgroundColor="White"
                            WidthRequest="80"
                            HeightRequest="30"
                            Clicked="Button_Clicked6"
                            AbsoluteLayout.LayoutBounds="0.8, 0, AutoSize, AutoSize"
                            AbsoluteLayout.LayoutFlags="PositionProportional" />
                </AbsoluteLayout>

              
                <Label Text="작은 미술관"
                       HorizontalOptions="Center"
                       VerticalOptions="Start"
                       FontSize="Large"
                       TextColor="WhiteSmoke"
                       FontAttributes="Bold"
                       Margin="0,410,0,20">
                </Label>

                <StackLayout Orientation="Horizontal"
                             HorizontalOptions="Center"
                             VerticalOptions="Center">

                    <!-- 동양화 -->
                    <StackLayout Margin="10,0">
                        <Button Text="동양화"
                                FontSize="Small"
                                TextColor="Black"
                                BorderColor="LightGray"
                                BackgroundColor="White"
                                WidthRequest="90"
                                HeightRequest="40"
                                Clicked="Button_Clicked2"></Button>
                        <Frame BorderColor="Gray"
                               CornerRadius="100"
                               Padding="0"
                               Margin="0,5,0,20"
                               HorizontalOptions="Center"
                               VerticalOptions="Start">
                            <Image Source="https://search.pstatic.net/common/?src=http%3A%2F%2Fblogfiles.naver.net%2FMjAyMjAxMTJfMTY3%2FMDAxNjQxOTcyOTk5NjM4.esrxI4VZZ-47f-j_X5P9PePIsf6VTOQkFycpkkNEyvIg.zJeMzpndIURydcHEBR8ky_3jPlUCPwSbDpVghKf9tkUg.JPEG.baecheop%2F36_%25BB%25E7%25C0%25CE%25BE%25CF.jpg"
                                   HorizontalOptions="Start"
                                   VerticalOptions="Start"
                                   WidthRequest="80"
                                   HeightRequest="65">
                            </Image>
                        </Frame>
                    </StackLayout>

                    <!-- 서양화 -->
                    <StackLayout Margin="10,0">
                        <Button Text="서양화"
                                FontSize="Small"
                                TextColor="Black"
                                BorderColor="LightGray"
                                BackgroundColor="white"
                                WidthRequest="90"
                                HeightRequest="40"
                                Clicked="Button_Clicked3"></Button>
                        <Frame BorderColor="Gray"
                               CornerRadius="100"
                               Padding="0"
                               Margin="0,5,0,20"
                               HorizontalOptions="Center"
                               VerticalOptions="Start">
                            <Image Source="https://search.pstatic.net/common/?src=http%3A%2F%2Fblogfiles.naver.net%2FMjAyMzAyMTBfMTYg%2FMDAxNjc2MDE0NjAxMzE1.K007hi2Mz-t_uS_iWDGSVuAQO7vX8kDKC6e7Mj9iRHsg.XQFABl_e4iwITpcaZGk2UgSn1YNwG6Si5u6JhDgurmAg.JPEG.kjher310%2FVincent_van_Gogh_The_Bedroom_Sample.jpg"
                                   HorizontalOptions="Start"
                                   VerticalOptions="Start"
                                   WidthRequest="80"
                                   HeightRequest="65">
                            </Image>
                        </Frame>
                    </StackLayout>

                    <!-- 미술분야 -->
                    <StackLayout Margin="10,0">
                        <Button Text="미술분야"
                                FontSize="Small"
                                TextColor="Black"
                                BorderColor="LightGray"
                                BackgroundColor="white"
                                WidthRequest="90"
                                HeightRequest="40"
                                Clicked="Button_Clicked4"></Button>
                        <Frame BorderColor="Gray"
                               CornerRadius="100"
                               Padding="0"
                               Margin="0,5,0,20"
                               HorizontalOptions="Center"
                               VerticalOptions="Start">
                            <Image Source="https://weekly.chosun.com/news/photo/202005/15747_1.jpg"
                                   HorizontalOptions="Start"
                                   VerticalOptions="Start"
                                   WidthRequest="80"
                                   HeightRequest="65">
                            </Image>
                        </Frame>
                    </StackLayout>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </AbsoluteLayout>
</ContentPage>
